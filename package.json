{
	"name": "w0s.jp-shell",
	"private": true,
	"type": "module",
	"scripts": {
		"watch": "tsc --project node/tsconfig.json -w",
		"prebuild": "rimraf node/dist/* -g",
		"build": "tsc --project node/tsconfig.json",
		"prelint": "npm run build",
		"lint": "eslint node/src/**/*.ts node/__tests__/*.test.js node/@types/*.d.ts",
		"pretest": "npm run build",
		"test": "node --experimental-test-coverage --test",
		"format": "prettier -w .",
		"github-actions-lint": "yamllint .github/workflows/*.yml",
		"shell-Test": "node --env-file=.env.development node/dist/shell.js -c Test -t 0",
		"shell-CrawlerNews": "node --env-file=.env.development node/dist/shell.js -c CrawlerNews -t 10",
		"shell-CrawlerResource": "node --env-file=.env.development node/dist/shell.js -c CrawlerResource -t 10",
		"shell-JrCyberStation": "node --env-file=.env.development node/dist/shell.js -c JrCyberStation -t 20",
		"shell-ThumbImage": "node --env-file=.env.development node/dist/shell.js -c ThumbImage -t 30",
		"shell-YokohamaLibraryHoldNotice": "node --env-file=.env.development node/dist/shell.js -c YokohamaLibraryHoldNotice -t 10"
	},
	"dependencies": {
		"@log4js-node/smtp": "^2.0.8",
		"@w0s/string-convert": "^2.0.1",
		"dayjs": "^1.11.10",
		"file-type": "^18.7.0",
		"jsdom": "^23.0.1",
		"log4js": "^6.9.1",
		"nodemailer": "^6.9.9",
		"puppeteer-core": "^22.11.2",
		"relative-to-absolute-iri": "^1.0.7",
		"sqlite": "^5.1.1",
		"sqlite3": "^5.1.6",
		"whatwg-mimetype": "^4.0.0"
	},
	"devDependencies": {
		"@types/jsdom": "^21.1.6",
		"@types/nodemailer": "^6.4.14",
		"@types/whatwg-mimetype": "^3.0.2",
		"@w0s/eslint-config": "^7.0.0",
		"@w0s/tsconfig": "^1.5.1",
		"eslint": "^8.57.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.1.1",
		"rimraf": "^6.0.1",
		"typescript": "^5.5.2",
		"yaml-lint": "^1.7.0"
	}
}
