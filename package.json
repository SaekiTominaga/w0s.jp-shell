{
	"name": "w0s.jp-shell",
	"private": true,
	"type": "module",
	"scripts": {
		"watch": "tsc --project node/tsconfig.json -w",
		"build": "tsc --project node/tsconfig.json",
		"lint": "eslint node/src/**/*.ts node/__tests__/*.test.js node/@types/*.d.ts",
		"test": "npm run config-convert && npm run build && cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage",
		"config-convert": "json2ts -i configure/schema -o configure/type",
		"config-validate": "run-p _config-validate:*",
		"github-actions-lint": "yamllint .github/workflows/*.yml",
		"shell-Test": "node node/dist/shell.js -c Test -t 0",
		"shell-CrawlerNews": "node node/dist/shell.js -c CrawlerNews -t 10",
		"shell-CrawlerResource": "node node/dist/shell.js -c CrawlerResource -t 10",
		"shell-JrCyberStation": "node node/dist/shell.js -c JrCyberStation -t 20",
		"shell-ThumbImage": "node node/dist/shell.js -c ThumbImage -t 30 --dev",
		"shell-TwitterArchive": "node node/dist/shell.js -c TwitterArchive -t 0",
		"shell-YokohamaLibraryHoldNotice": "node node/dist/shell.js -c YokohamaLibraryHoldNotice -t 10",
		"_config-validate:common": "ajv --spec=draft7 -s configure/schema/common.json -d configure/common.json",
		"_config-validate:crawler-news": "ajv --spec=draft7 -s configure/schema/crawler-news.json -d configure/crawler-news.json",
		"_config-validate:crawler-resource": "ajv --spec=draft7 -s configure/schema/crawler-resource.json -d configure/crawler-resource.json",
		"_config-validate:jr-cyber-station": "ajv --spec=draft7 -s configure/schema/jr-cyber-station.json -d configure/jr-cyber-station.json",
		"_config-validate:test": "ajv --spec=draft7 -s configure/schema/test.json -d configure/test.json",
		"_config-validate:thumb-image": "ajv --spec=draft7 -s configure/schema/thumb-image.json -d configure/thumb-image.json",
		"_config-validate:twitter-archive": "ajv --spec=draft7 -s configure/schema/twitter-archive.json -d configure/twitter-archive.json",
		"_config-validate:yokohama-library-hold-notice": "ajv --spec=draft7 -s configure/schema/yokohama-library-hold-notice.json -d configure/yokohama-library-hold-notice.json"
	},
	"dependencies": {
		"@log4js-node/smtp": "^2.0.8",
		"@w0s/string-convert": "^2.0.1",
		"dayjs": "^1.11.10",
		"file-type": "^18.7.0",
		"header-case": "^2.0.4",
		"jsdom": "^23.0.1",
		"log4js": "^6.9.1",
		"nodemailer": "^6.9.9",
		"puppeteer-core": "^21.1.1",
		"relative-to-absolute-iri": "^1.0.7",
		"sqlite": "^5.1.1",
		"sqlite3": "^5.1.6",
		"uuid": "^9.0.1",
		"whatwg-mimetype": "^4.0.0"
	},
	"devDependencies": {
		"@types/jsdom": "^21.1.6",
		"@types/nodemailer": "^6.4.14",
		"@types/uuid": "^9.0.7",
		"@types/whatwg-mimetype": "^3.0.2",
		"@w0s/eslint-config": "^5.0.1",
		"@w0s/tsconfig": "^1.4.0",
		"ajv-cli": "^5.0.0",
		"cross-env": "^7.0.3",
		"eslint": "^8.56.0",
		"jest": "^29.7.0",
		"json-schema-to-typescript": "^13.1.1",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.1.1",
		"typescript": "^5.0.4",
		"yaml-lint": "^1.7.0"
	}
}
