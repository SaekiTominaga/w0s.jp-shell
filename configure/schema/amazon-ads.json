{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://schema.w0s.jp/amazon-ads.json",
	"type": "object",
	"title": "Amazon 商品情報チェッカー",
	"required": ["title", "json_dir", "blog_select_limit", "paapi"],
	"properties": {
		"title": {
			"type": "string",
			"title": "コンポーネントタイトル",
			"description": "自然言語による、人間が見て分かりやすい名前を設定する。通知メールの件名などで使用される。",
			"examples": ["Amazon 商品情報チェッカー"]
		},
		"json_dir": {
			"type": "string",
			"title": "JSON ファイルの保存ディレクトリ"
		},
		"blog_select_limit": {
			"type": "integer",
			"minimum": 0,
			"title": "blog テーブルから処理対象の ASIN を取得する際の最大取得数"
		},
		"paapi": {
			"type": "object",
			"title": "Amazon - Product Advertising API",
			"required": ["request", "access_interval", "getitems_itemids_chunk"],
			"properties": {
				"request": {
					"type": "object",
					"title": "Common Request Parameters",
					"description": "https://webservices.amazon.com/paapi5/documentation/common-request-parameters.html",
					"required": ["partner_tag", "access_key", "secret_key", "marketplace", "host", "region"],
					"properties": {
						"partner_tag": {
							"type": "string",
							"title": "パートナーを一意に識別する英数字トークン",
							"examples": ["store-22"]
						},
						"access_key": {
							"type": "string",
							"title": "認証キー",
							"description": "https://affiliate.amazon.co.jp/assoc_credentials/home"
						},
						"secret_key": {
							"type": "string",
							"title": "シークレットキー",
							"description": "https://affiliate.amazon.co.jp/assoc_credentials/home"
						},
						"marketplace": {
							"type": "string",
							"title": "Target Amazon Locale",
							"description": "https://webservices.amazon.com/paapi5/documentation/locale-reference.html",
							"examples": ["www.amazon.co.jp"]
						},
						"host": {
							"type": "string",
							"title": "The host value of the target locale to which you are sending requests",
							"description": "https://webservices.amazon.com/paapi5/documentation/common-request-parameters.html#host-and-region",
							"examples": ["webservices.amazon.co.jp"]
						},
						"region": {
							"type": "string",
							"title": "The AWS region of the target locale to which you are sending requests",
							"description": "https://webservices.amazon.com/paapi5/documentation/common-request-parameters.html#host-and-region",
							"examples": ["us-west-2"]
						}
					},
					"additionalProperties": false
				},
				"access_interval": {
					"type": "integer",
					"minimum": 0,
					"title": "API のリクエスト間隔（秒）"
				},
				"getitems_itemids_chunk": {
					"type": "integer",
					"minimum": 1,
					"maximum": 10,
					"title": "`GetItems` による商品検索時、一度のリクエストに含める ASIN の最大数",
					"description": "https://webservices.amazon.com/paapi5/documentation/get-items.html#ItemLookup-rp",
					"default": 10
				}
			},
			"additionalProperties": false
		}
	},
	"additionalProperties": false
}
