{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://schema.w0s.jp/Common.json",
	"type": "object",
	"title": "共通設定ファイル",
	"required": ["documentRoot", "url", "browserPath", "mail", "sqlite"],
	"properties": {
		"documentRoot": {
			"type": "string",
			"title": "ウェブページの DocumentRoot",
			"description": "例えば Apache の `DocumentRoot` ディレクティブ<https://httpd.apache.org/docs/2.4/en/mod/core.html#documentroot>に相当するディレクトリの絶対パス、または `node` ディレクトリを基準にした相対パス"
		},
		"url": {
			"type": "string",
			"title": "トップページの URL",
			"examples": ["https://example.com/"]
		},
		"browserPath": {
			"type": "string",
			"title": "ブラウザーのプログラムのパス",
			"examples": ["/usr/bin/chrome"]
		},
		"mail": {
			"type": "object",
			"title": "管理者への通知に使用する E-mail の各種情報",
			"required": ["smtp", "user", "password", "port", "from", "to"],
			"properties": {
				"smtp": {
					"type": "string"
				},
				"user": {
					"type": "string"
				},
				"password": {
					"type": "string"
				},
				"port": {
					"type": "integer",
					"minimum": 0
				},
				"from": {
					"type": "string"
				},
				"to": {
					"type": "string"
				}
			},
			"additionalProperties": false
		},
		"sqlite": {
			"type": "object",
			"title": "SQLite",
			"required": ["db"],
			"properties": {
				"db": {
					"type": "object",
					"title": "DB ファイルのパス（絶対パス、または `node` ディレクトリを基準にした相対パス）",
					"properties": {
						"amazonpa": {
							"type": "string",
							"title": "amazonpa テーブル"
						},
						"crawler": {
							"type": "string",
							"title": "crawler テーブル"
						},
						"diary": {
							"type": "string",
							"title": "diary テーブル"
						},
						"kumetatwitter": {
							"type": "string",
							"title": "kumetatwitter テーブル"
						},
						"madokatwitter": {
							"type": "string",
							"title": "madokatwitter テーブル"
						}
					},
					"additionalProperties": false
				}
			},
			"additionalProperties": false
		}
	},
	"additionalProperties": false
}
