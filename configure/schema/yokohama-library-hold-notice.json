{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://schema.w0s.jp/yokohama-library-hold-notice.json",
	"type": "object",
	"title": "横浜市立図書館　予約連絡",
	"required": ["title", "card", "password", "url", "login", "reserve", "notice"],
	"properties": {
		"title": {
			"type": "string",
			"title": "コンポーネントタイトル",
			"description": "自然言語による、人間が見て分かりやすい名前を設定する。通知メールの件名などで使用される。"
		},
		"card": {
			"type": "string",
			"title": "図書館カード番号"
		},
		"password": {
			"type": "string",
			"title": "パスワード"
		},
		"url": {
			"type": "string",
			"title": "アクセスする URL"
		},
		"login": {
			"type": "object",
			"title": "ログインフォーム",
			"required": ["url", "cardSelector", "passwordSelector", "submitSelector", "errorSelector"],
			"properties": {
				"url": {
					"type": "string",
					"title": "ログイン URL"
				},
				"cardSelector": {
					"type": "string",
					"title": "ユーザー ID 入力欄のセレクター"
				},
				"passwordSelector": {
					"type": "string",
					"title": "パスワード入力欄のセレクター"
				},
				"submitSelector": {
					"type": "string",
					"title": "送信ボタンのセレクター"
				}
			},
			"additionalProperties": false
		},
		"reserve": {
			"type": "object",
			"title": "予約中ページの情報",
			"required": ["wrapSelector", "titleSelector", "availableSelector"],
			"properties": {
				"wrapSelector": {
					"type": "string",
					"title": "包括要素のセレクター"
				},
				"titleSelector": {
					"type": "string",
					"title": "資料名のセレクター"
				},
				"availableSelector": {
					"type": "string",
					"title": "「受取可」アイコンのセレクター"
				}
			},
			"additionalProperties": false
		},
		"notice": {
			"type": "object",
			"title": "通知メッセージ",
			"required": ["messagePrefix", "messageSuffix"],
			"properties": {
				"messagePrefix": {
					"type": "string",
					"title": "資料名の前に付けるメッセージ"
				},
				"messageSuffix": {
					"type": "string",
					"title": "資料名の後に付けるメッセージ"
				}
			},
			"additionalProperties": false
		}
	},
	"additionalProperties": false
}
