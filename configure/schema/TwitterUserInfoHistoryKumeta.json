{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://schema.w0s.jp/TwitterUserInfoHistoryKumeta.json",
	"type": "object",
	"title": "久米田康治 Twitter ユーザー履歴",
	"required": ["title", "followers_threshold", "image_dir", "twitter"],
	"properties": {
		"title": {
			"type": "string",
			"title": "コンポーネントタイトル",
			"description": "自然言語による、人間が見て分かりやすい名前を設定する。通知メールの件名などで使用される。",
			"examples": ["久米田康治 Twitter ユーザー履歴"]
		},
		"followers_threshold": {
			"type": "number",
			"minimum": 1,
			"title": "フォロワー数がこの倍数を超える毎に通知する"
		},
		"image_dir": {
			"type": "string",
			"title": "画像ファイルの保存ディレクトリ（ドキュメントルート基準）"
		},
		"twitter": {
			"type": "object",
			"title": "Twitter API",
			"required": ["dev", "production"],
			"properties": {
				"dev": {
					"type": "object",
					"title": "開発時に使用するアプリ情報",
					"$ref": "#/properties/twitter/definitions/app_keys"
				},
				"production": {
					"type": "object",
					"title": "実稼働で使用するアプリ情報",
					"$ref": "#/properties/twitter/definitions/app_keys"
				}
			},
			"additionalProperties": false,
			"definitions": {
				"app_keys": {
					"type": "object",
					"required": ["consumer_key", "consumer_secret", "access_token", "access_token_secret"],
					"properties": {
						"consumer_key": {
							"type": "string",
							"title": "API key"
						},
						"consumer_secret": {
							"type": "string",
							"title": "API key secret"
						},
						"access_token": {
							"type": "string",
							"title": "Access token"
						},
						"access_token_secret": {
							"type": "string",
							"title": "Access token secret"
						}
					},
					"additionalProperties": false
				}
			}
		}
	},
	"additionalProperties": false
}
