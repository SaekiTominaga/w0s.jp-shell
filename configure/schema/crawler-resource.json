{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://schema.w0s.jp/CrawlerResource.json",
	"type": "object",
	"title": "ウェブ巡回（リソース）",
	"required": ["title", "fetch_timeout", "access_interval_host", "report_error_count", "save"],
	"properties": {
		"title": {
			"type": "string",
			"title": "コンポーネントタイトル",
			"description": "自然言語による、人間が見て分かりやすい名前を設定する。通知メールの件名などで使用される。",
			"examples": ["ウェブ巡回（リソース）"]
		},
		"fetch_timeout": {
			"type": "integer",
			"minimum": 1,
			"title": "URL 毎のタイムアウト（ミリ秒）"
		},
		"access_interval_host": {
			"type": "number",
			"minimum": 0,
			"title": "同一ドメインサイトの取得間隔（秒）"
		},
		"report_error_count": {
			"type": "integer",
			"minimum": 1,
			"title": "アクセスエラーがこの回数を超えたら報告する"
		},
		"save": {
			"type": "object",
			"title": "ファイル保存",
			"required": ["dir", "url"],
			"properties": {
				"dir": {
					"type": "string",
					"title": "ディレクトリ"
				},
				"url": {
					"type": "string",
					"title": "ディレクトリの URL"
				}
			},
			"additionalProperties": false
		}
	},
	"additionalProperties": false
}
